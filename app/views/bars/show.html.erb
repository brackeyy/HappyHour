


<div class="container">
  <div id="carouselExampleControls" class="carousel slide rounded" data-ride="carousel">
      <div class="box position-relative">
        <div class="position-absolute black-overlay">

        </div>
        <div class="carousel-inner">
          <% @bar.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%#= "active" if index == 0 %>">
              <!-- <img src="..." class="d-block w-100" alt="Flat photo"> -->
              <%= cl_image_tag photo.key,  crop: :fill, class: "d-block w-100 gradient" %>
            </div>
          <% end %>


          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

  <div class="header-show">
    <h1 id="h1-show"><%=@bar.name %></h1>
    <div class="info-show d-flex justify-content-around">
      <p><i class="fas fa-tag"></i><%= @bar.description %></p>
      <p><i class="fas fa-city fa-purple"></i><%= @bar.location %></p>
    </div>
  </div>
  <div class="buttons d-flex justify-content-around">
    <%= link_to 'Delete my bar', bar_path(@bar), class: "btn button-dark", method: :delete if current_user == @bar.user %>
    <%= link_to "Add an offer", new_bar_offer_path(@bar), class: "btn button-dark" if current_user == @bar.user %>
  </div>
  <br>






  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>
</div>

