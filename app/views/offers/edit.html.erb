<div class="top_container">
</div>
<div class="container">
  <h2>Update your offer:</h2>
  <div class="form-inputs">
    <%= simple_form_for([@bar, @offer]) do |f| %>
    <%= f.input :description %>
    <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :expired %>

    <div class="button-centered"><%= f.submit class: 'btn btn-primary' %></div>
    <% end %>
  </div>
</div>

