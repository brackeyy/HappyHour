<div class="top_container">
</div>
<div class="container">
  <%# @offer.bar.photos do |photo| %>
  <%#= cl_image_tag photo.key,  crop: :fill, class: "d-block w-100" %>
  <%# end %>

  <%#= link_to "Back", offers_path, id: "back-button" class: "previous-round" #8249;%>
  <br>


  <div>
      <h2><%= @offer.description %></h2>
      <br>
      <!-- <h2 id= title><%#= @offer.bar.name %></h2> -->
      <br>
      <p>Offer expires in:</p>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <div id="progressBar">
        <div></div>
      </div>
      <!-- <p><%#= @offer.expired %></p> -->

  <div id="carouselExampleControls" class="carousel slide rounded" data-ride="carousel">
    <div class="box position-relative">
      <div class="position-absolute black-overlay">

      </div>
      <p id="countdown" data-end-time="<%= @offer.end_time %>"></p>

      <div class="carousel-inner">
        <% @offer.bar.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%#= "active" if index == 0 %>">
            <!-- <img src="..." class="d-block w-100" alt="Flat photo"> -->
            <%= cl_image_tag photo.key,  crop: :fill, class: "d-block w-100" %>
          </div>
        <% end %>


        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>



    <div class="card-show-infos">
      <div>
        <h2 id="title"><%= @offer.bar.name %></h2>
        <br>

        <br>
        <p><%= @offer.bar.location %></p>
      </div>


    </div>

    <div class="button-offer-container">
      <%= link_to 'Delete', offer_path(@offer), method: :delete, class: "btn button-offer"  %>
      <%= link_to "Edit your offer", edit_offer_path(@offer), class: "btn button-offer" %>
      <%= link_to "BOOK!", "/offers/#{@offer.id}/bookings", method: :post, class: "btn button-offer" %>
    </div>



  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
       <br>
  <div class="button-offer-container">
  <%= link_to "Back", offers_path, class: "btn button-offer"%>
  </div>
</div>
